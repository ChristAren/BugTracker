@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1">Login</a>
            </div>
            <div class="card-body">
                <section>
                    <form id="account" method="post">
                        <h4>Enter your information to log in.</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col col-md-6 col-md-offset-2">
                <h4>Demo Login</h4>
                <form method="post">
                    <button type="submit" name="demoEmail" value="DemoAdminEmail" class="btn btn-primary offset-9">Demo Admin</button>
                </form>
                <form method="post">
                    <button type="submit" name="demoEmail" value="DemoPmEmail" class="btn btn-primary offset-9">Demo PM</button>
                </form>
                <form method="post">
                    <button type="submit" name="demoEmail" value="DemoDevEmail" class="btn btn-primary offset-9">Demo Dev</button>
                </form>
                <form method="post">
                    <button type="submit" name="demoEmail" value="DemoSubEmail" class="btn btn-primary offset-9">Demo Sub</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
